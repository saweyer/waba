nfigToolbox.h" 	"{DDK_Includes-dir}NewtErrors.h" 	"{DDK_Includes-dir}Newton.h" 	"{DDK_Includes-dir}OS600:UserObjects.h" 	"{DDK_Includes-dir}OS600:SharedTypes.h" 	"{DDK_Includes-dir}OS600:UserGlobals.h" 	"{DDK_Includes-dir}OS600:LongTime.h" 	"{DDK_Includes-dir}ConfigGlobal.h" 	"{DDK_Includes-dir}CLibrary:stdlib.h" 	"{DDK_Includes-dir}CLibrary:stddef.h" 	"{DDK_Includes-dir}NewtonTypes.h" 	"{DDK_Includes-dir}NewtonWidgets.h" 	"{DDK_Includes-dir}NewtonTime.h" 	"{DDK_Includes-dir}NewtonMemory.h" 	"{DDK_Includes-dir}NewtonExceptions.h" 	"{DDK_Includes-dir}NewtonDebug.h" 	"{DDK_Includes-dir}OS600:KernelTypes.h" 	"{DDK_Includes-dir}NewtConfig.h" 	"{DDK_Includes-dir}Toolbox:CompMath.h" 	"{DDK_Includes-dir}CLibrary:setjmp.h" 	"{DDK_Includes-dir}CLibrary:stdio.h" 	"{DDK_Includes-dir}OS600:ConfigOS600.h" 	"{DDK_Includes-dir}HammerConfigBits.h"# ---- Dependencies build rule ----Dependencies    $OutOfDate	MakeDepend 		-append {MAKEFILE} 		-objext .o 		{Includes} 		{SrcFiles}## ======================================================================= #### That's the thing about people who think they hate computers.  What they #### really hate is lousy programmers.                                       ####                 -- Larry Niven and Jerry Pournelle in "Oath of Fealty"  #### ======================================================================= ##