RemoveScript := func(partFrame)	begin	// tell our VMs to shut themselves down	local vms := GetGlobalVar(kRegisterSym);	local app := GetRoot().(kAppSym);	if (vms) then // if it's not null		begin		local len := Length(vms);		local i;		for i := 0 to len - 1 do				begin				if debug then Print(i);				//if debug then Print(GetRoot().(kAppSym));				(app):__shutdownWabaVM(vms[i]);				if debug then Print("Shut down");				end;		end;	else if debug then Print("VM Registration array is missing! -- RemoveScript");	UnDefGlobalVar(kRegisterSym);  // regardless!	end;